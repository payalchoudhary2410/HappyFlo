<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F25278"
    tools:context=".FirstFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="307dp"
            android:layout_height="169dp"

            android:clickable="true"
            android:contextClickable="true"
            android:visibility="visible"
            app:cardBackgroundColor="#fde3f1"
            app:cardCornerRadius="6dp"

            app:contentPadding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView2"
            app:layout_constraintVertical_bias="0.139">

            <TextView
                android:id="@+id/cardText"
                android:layout_width="178dp"
                android:layout_height="100dp"
                android:fontFamily="@font/rambla"
                android:text="Try these happifying songs :)"
                android:textColor="#009688"
                android:textSize="24sp"
                android:translationX="15dp"
                android:translationY="20dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="163dp"
                android:layout_height="124dp"
                android:translationX="150dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/songs" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="307dp"
        android:layout_height="169dp"
        android:clickable="true"
        android:contextClickable="true"
        android:visibility="visible"
        app:cardBackgroundColor="#fde3f1"
        app:cardCornerRadius="6dp"
        app:contentPadding="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/cardText2"
            style="@android:style/Widget.DeviceDefault.TextView"
            android:layout_width="210dp"
            android:layout_height="63dp"
            android:fontFamily="@font/rambla"
            android:text="Give yourself a chocolate treat!"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#009688"
            android:textSize="24sp"
            android:translationX="15dp"
            android:translationY="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="64dp"
            android:layout_height="135dp"
            android:translationX="220dp"
            android:translationY="15dp"
            app:srcCompat="@drawable/chocolate" />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="307dp"
            android:layout_height="169dp"
            android:clickable="true"
            android:contextClickable="true"
            android:visibility="visible"
            app:cardBackgroundColor="#fde3f1"
            app:cardCornerRadius="6dp"
            app:contentPadding="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/cardText1"
                android:layout_width="178dp"
                android:layout_height="130dp"

                android:fontFamily="@font/rambla"
                android:text="Excessive Cramps?  Consult a Doctor!"
                android:textColor="#009688"
                android:textSize="24sp"
                android:translationX="15dp"
                android:translationY="20dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="129dp"
                android:layout_height="107dp"
                android:translationX="180dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/cramps" />

        </androidx.cardview.widget.CardView>






    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:fontFamily="@font/rambla"
        android:text="Your stress level is 76%! Give yourself a rest and try these out!"
        android:textColor="#b70001"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>